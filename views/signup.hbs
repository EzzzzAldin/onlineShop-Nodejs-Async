<div class="container text-center">
    <h3>Create Account</h3>
    <form action="/signup" method="post">
        <input type="text" class="form-control mb-3" name="username" placeholder="Username">
        <input type="email" class="form-control mb-3" name="email" placeholder="E-mail">
        <input type="password" class="form-control mb-3" name="password" placeholder="Password">
        <input type="password" class="form-control mb-3" name="confiremPassword" placeholder="Confirm Password">
        <input type="submit" value="Create Account" class="btn btn-primary">
    </form>
    {{#if authError}}
        <br>
        <p class="alert alert-danger">
            {{authError}}
        </p>
    {{/if}}
    {{#each validationErrors}}
        <p class="alert alert-danger mt-2">
            {{this.msg}}
        </p>

    {{/each}}


    <br>
    <div>
        Alrady have account ? <a href="/login">Login</a>
    </div>
</div>